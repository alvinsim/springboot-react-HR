{
		"compilerOptions": {
				"target": "es6",
				"moduleResolution": "node",
				"baseUrl": "./src",
				"jsx": "react",
				"paths": {
						"~/*": ["./*"]
				},
				"module": "commonjs",
				"outDir": "./dist",
				"strict": true,
				"typeRoots": ["node_modules/@types"]
		},
		"include": ["./src/**/*"],
		"exclude": ["node_modules"]
}
